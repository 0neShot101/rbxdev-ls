{
  "name": "rbxdev-ls",
  "version": "0.1.5",
  "description": "High-performance Roblox/Luau language server with full API support",
  "main": "dist/index.js",
  "bin": {
    "rbxdev-ls": "./dist/index.js",
    "rbxdev-mcp": "./dist/mcp.js"
  },
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "build:mcp": "bun build src/mcp.ts --outdir dist --target node",
    "build:all": "bun build src/index.ts src/mcp.ts --outdir dist --target node",
    "start": "bun dist/index.js",
    "start:mcp": "node dist/mcp.js",
    "dev": "bun --watch src/index.ts",
    "dev:mcp": "node --watch dist/mcp.js",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "fetch-api": "bun scripts/fetch-roblox-api.ts && bun scripts/fetch-sunc-api.ts"
  },
  "keywords": [
    "roblox",
    "luau",
    "lua",
    "language-server",
    "lsp",
    "sunc"
  ],
  "author": "Andrew Tandy <andrewtandy12@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "vscode-jsonrpc": "^8.2.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver-textdocument": "^1.0.12",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
