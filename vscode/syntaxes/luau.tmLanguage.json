{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Luau",
  "scopeName": "source.luau",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#attributes" },
    { "include": "#type-declarations" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#types" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.directive.luau",
          "match": "--!(strict|nonstrict|nocheck|native|optimize)\\b.*$"
        },
        {
          "name": "comment.block.luau",
          "begin": "--\\[\\[",
          "end": "\\]\\]"
        },
        {
          "name": "comment.block.luau",
          "begin": "--\\[=+\\[",
          "end": "\\]=+\\]"
        },
        {
          "name": "comment.line.double-dash.luau",
          "match": "--.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.luau",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "include": "#string-escapes" }
          ]
        },
        {
          "name": "string.quoted.single.luau",
          "begin": "'",
          "end": "'",
          "patterns": [
            { "include": "#string-escapes" }
          ]
        },
        {
          "name": "string.quoted.other.multiline.luau",
          "begin": "\\[\\[",
          "end": "\\]\\]"
        },
        {
          "name": "string.quoted.other.multiline.luau",
          "begin": "\\[=+\\[",
          "end": "\\]=+\\]"
        },
        {
          "name": "string.interpolated.luau",
          "begin": "`",
          "end": "`",
          "patterns": [
            { "include": "#string-escapes" },
            {
              "name": "meta.embedded.expression.luau",
              "contentName": "meta.template.expression.luau",
              "begin": "\\{",
              "beginCaptures": {
                "0": { "name": "punctuation.definition.interpolation.begin.luau" }
              },
              "end": "\\}",
              "endCaptures": {
                "0": { "name": "punctuation.definition.interpolation.end.luau" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            }
          ]
        }
      ]
    },
    "string-escapes": {
      "patterns": [
        {
          "name": "constant.character.escape.hex.luau",
          "match": "\\\\x[0-9a-fA-F]{2}"
        },
        {
          "name": "constant.character.escape.unicode.luau",
          "match": "\\\\u\\{[0-9a-fA-F]+\\}"
        },
        {
          "name": "constant.character.escape.decimal.luau",
          "match": "\\\\\\d{1,3}"
        },
        {
          "name": "constant.character.escape.whitespace.luau",
          "match": "\\\\z\\s*"
        },
        {
          "name": "constant.character.escape.luau",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.luau",
          "match": "\\b0[xX][0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.binary.luau",
          "match": "\\b0[bB][01_]+\\b"
        },
        {
          "name": "constant.numeric.float.luau",
          "match": "\\b\\d[\\d_]*\\.\\d[\\d_]*([eE][+-]?\\d[\\d_]*)?\\b"
        },
        {
          "name": "constant.numeric.integer.luau",
          "match": "\\b\\d[\\d_]*\\b"
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "meta.attribute.luau",
          "match": "(@)([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "punctuation.definition.attribute.luau" },
            "2": { "name": "entity.other.attribute-name.luau" }
          }
        }
      ]
    },
    "type-declarations": {
      "patterns": [
        {
          "name": "meta.type-declaration.export.luau",
          "match": "\\b(export)\\s+(type)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.control.export.luau" },
            "2": { "name": "storage.type.luau" },
            "3": { "name": "entity.name.type.luau" }
          }
        },
        {
          "name": "meta.type-declaration.luau",
          "match": "\\b(type)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "storage.type.luau" },
            "2": { "name": "entity.name.type.luau" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.luau",
          "match": "\\b(if|then|else|elseif|end|for|while|do|repeat|until|break|continue|return|in)\\b"
        },
        {
          "name": "keyword.other.luau",
          "match": "\\b(local|function|export|type|typeof)\\b"
        },
        {
          "name": "constant.language.luau",
          "match": "\\b(true|false|nil)\\b"
        },
        {
          "name": "keyword.operator.logical.luau",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "variable.language.self.luau",
          "match": "\\b(self)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.type.luau",
          "match": "->|\\?|::|&|\\|"
        },
        {
          "name": "keyword.operator.assignment.luau",
          "match": "//=|\\+=|-=|\\*=|/=|%=|\\^=|\\.\\.=|="
        },
        {
          "name": "keyword.operator.comparison.luau",
          "match": "==|~=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.vararg.luau",
          "match": "\\.\\.\\."
        },
        {
          "name": "keyword.operator.concatenation.luau",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.arithmetic.luau",
          "match": "\\+|-|\\*|//|/|%|\\^|#"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.luau",
          "match": "\\b(function)\\s+([a-zA-Z_][a-zA-Z0-9_]*(?:\\.[a-zA-Z_][a-zA-Z0-9_]*)*(?::[a-zA-Z_][a-zA-Z0-9_]*)?)",
          "captures": {
            "1": { "name": "keyword.other.luau" },
            "2": { "name": "entity.name.function.luau" }
          }
        },
        {
          "name": "meta.function-call.luau",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.luau" }
          }
        },
        {
          "name": "meta.method-call.luau",
          "match": "(:)([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "punctuation.separator.method.luau" },
            "2": { "name": "entity.name.function.luau" }
          }
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.luau",
          "match": "\\b(nil|boolean|number|string|thread|buffer|vector|any|unknown|never)\\b"
        },
        {
          "name": "support.class.roblox.luau",
          "match": "\\b(Instance|BasePart|Part|MeshPart|UnionOperation|Model|Workspace|Player|Character|Humanoid|HumanoidDescription|Tool|Accessory|Script|LocalScript|ModuleScript|RemoteEvent|RemoteFunction|UnreliableRemoteEvent|BindableEvent|BindableFunction|TweenService|RunService|UserInputService|Players|ReplicatedStorage|ReplicatedFirst|ServerStorage|ServerScriptService|StarterGui|StarterPack|StarterPlayer|StarterPlayerScripts|StarterCharacterScripts|Lighting|SoundService|Teams|Chat|TextChatService|TextService|PathfindingService|PhysicsService|CollectionService|Debris|HttpService|MarketplaceService|DataStoreService|MemoryStoreService|MessagingService|TeleportService|SocialService|PolicyService|LocalizationService|GuiService|VRService|HapticService|ContextActionService|ProximityPromptService|ContentProvider|InsertService|BadgeService|GamePassService|GroupService|AssetService|AnimationService|AvatarEditorService|MaterialService|LogService|StatsService|TestService|UserService|ScreenGui|BillboardGui|SurfaceGui|Frame|TextLabel|TextButton|TextBox|ImageLabel|ImageButton|ScrollingFrame|ViewportFrame|UIListLayout|UIGridLayout|UITableLayout|UIPageLayout|UIPadding|UICorner|UIStroke|UIScale|UISizeConstraint|UITextSizeConstraint|UIAspectRatioConstraint|UIFlexItem|UIGradient|Camera|Attachment|WeldConstraint|Motor6D|Weld|Animation|AnimationTrack|AnimationController|Sound|ParticleEmitter|Beam|Trail|PointLight|SpotLight|SurfaceLight|Folder|Configuration|ObjectValue|StringValue|IntValue|NumberValue|BoolValue|BrickColorValue|Color3Value|Vector3Value|CFrameValue|RayValue|ClickDetector|ProximityPrompt|Seat|VehicleSeat|SpawnLocation|Terrain|Atmosphere|Sky|Clouds|BloomEffect|BlurEffect|ColorCorrectionEffect|DepthOfFieldEffect|SunRaysEffect)\\b"
        },
        {
          "name": "support.type.roblox.luau",
          "match": "\\b(Vector3|Vector2|Vector3int16|Vector2int16|CFrame|Color3|BrickColor|UDim|UDim2|Rect|Region3|Region3int16|NumberRange|NumberSequence|NumberSequenceKeypoint|ColorSequence|ColorSequenceKeypoint|PhysicalProperties|Ray|RaycastParams|RaycastResult|OverlapParams|TweenInfo|Font|Enum|EnumItem|RBXScriptSignal|RBXScriptConnection|PathWaypoint|DateTime|Random|SharedTable|Faces|Axes|FloatCurveKey|RotationCurveKey|CatalogSearchParams|DockWidgetPluginGuiInfo)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "support.variable.global.luau",
          "match": "\\b(game|workspace|script|shared|_G|_VERSION|plugin)\\b"
        },
        {
          "name": "support.function.global.luau",
          "match": "\\b(print|warn|error|assert|type|typeof|tostring|tonumber|select|pairs|ipairs|next|rawequal|rawget|rawset|rawlen|getmetatable|setmetatable|pcall|xpcall|require|unpack|collectgarbage|gcinfo|newproxy|getfenv|setfenv|tick|time|wait|delay|spawn|elapsedTime|version|loadstring)\\b"
        },
        {
          "name": "support.function.library.luau",
          "match": "\\b(math|string|table|coroutine|bit32|utf8|os|buffer|task|debug)\\b"
        }
      ]
    }
  }
}
