{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Luau",
  "scopeName": "source.luau",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#types" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.luau",
          "begin": "--\\[\\[",
          "end": "\\]\\]"
        },
        {
          "name": "comment.block.luau",
          "begin": "--\\[=+\\[",
          "end": "\\]=+\\]"
        },
        {
          "name": "comment.line.double-dash.luau",
          "match": "--.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.luau",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.luau",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.luau",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.luau",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.other.multiline.luau",
          "begin": "\\[\\[",
          "end": "\\]\\]"
        },
        {
          "name": "string.quoted.other.multiline.luau",
          "begin": "\\[=+\\[",
          "end": "\\]=+\\]"
        },
        {
          "name": "string.interpolated.luau",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "constant.character.escape.luau",
              "match": "\\\\."
            },
            {
              "name": "meta.embedded.expression.luau",
              "begin": "\\{",
              "end": "\\}",
              "patterns": [
                { "include": "$self" }
              ]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.luau",
          "match": "\\b0[xX][0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.binary.luau",
          "match": "\\b0[bB][01_]+\\b"
        },
        {
          "name": "constant.numeric.float.luau",
          "match": "\\b\\d[\\d_]*\\.\\d[\\d_]*([eE][+-]?\\d[\\d_]*)?\\b"
        },
        {
          "name": "constant.numeric.integer.luau",
          "match": "\\b\\d[\\d_]*\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.luau",
          "match": "\\b(if|then|else|elseif|end|for|while|do|repeat|until|break|continue|return|in)\\b"
        },
        {
          "name": "keyword.other.luau",
          "match": "\\b(local|function|export|type|typeof)\\b"
        },
        {
          "name": "constant.language.luau",
          "match": "\\b(true|false|nil)\\b"
        },
        {
          "name": "keyword.operator.logical.luau",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "variable.language.self.luau",
          "match": "\\b(self)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.luau",
          "match": "\\+|-|\\*|/|//|%|\\^|#"
        },
        {
          "name": "keyword.operator.comparison.luau",
          "match": "==|~=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.luau",
          "match": "\\+=|-=|\\*=|/=|//=|%=|\\^=|\\.\\.\\.=|="
        },
        {
          "name": "keyword.operator.concatenation.luau",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.type.luau",
          "match": "->|\\?|::|&|\\|"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.luau",
          "match": "\\b(function)\\s+([a-zA-Z_][a-zA-Z0-9_]*(?:\\.[a-zA-Z_][a-zA-Z0-9_]*)*(?::[a-zA-Z_][a-zA-Z0-9_]*)?)",
          "captures": {
            "1": { "name": "keyword.other.luau" },
            "2": { "name": "entity.name.function.luau" }
          }
        },
        {
          "name": "meta.function-call.luau",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.luau" }
          }
        },
        {
          "name": "meta.method-call.luau",
          "match": "(:)([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "punctuation.separator.method.luau" },
            "2": { "name": "entity.name.function.luau" }
          }
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "meta.type-annotation.luau",
          "match": ":\\s*([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "entity.name.type.luau" }
          }
        },
        {
          "name": "support.type.primitive.luau",
          "match": "\\b(nil|boolean|number|string|thread|buffer|vector|any|unknown|never)\\b"
        },
        {
          "name": "support.class.roblox.luau",
          "match": "\\b(Instance|Part|Model|Workspace|Player|Character|Humanoid|Tool|Script|LocalScript|ModuleScript|RemoteEvent|RemoteFunction|BindableEvent|BindableFunction|TweenService|RunService|UserInputService|Players|ReplicatedStorage|ServerStorage|ServerScriptService|StarterGui|StarterPack|StarterPlayer|Lighting|SoundService|Teams|Chat|TextService|PathfindingService|PhysicsService|CollectionService|Debris|HttpService|MarketplaceService|DataStoreService|MemoryStoreService|MessagingService|TeleportService|SocialService|PolicyService|LocalizationService|GuiService|VRService|HapticService|ContextActionService|ProximityPromptService)\\b"
        },
        {
          "name": "support.type.roblox.luau",
          "match": "\\b(Vector3|Vector2|CFrame|Color3|BrickColor|UDim|UDim2|Rect|Region3|NumberRange|NumberSequence|ColorSequence|PhysicalProperties|Ray|TweenInfo|Font|Enum|RBXScriptSignal|RBXScriptConnection)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "support.variable.global.luau",
          "match": "\\b(game|workspace|script|shared|_G|_VERSION)\\b"
        },
        {
          "name": "support.function.global.luau",
          "match": "\\b(print|warn|error|assert|type|typeof|tostring|tonumber|select|pairs|ipairs|next|rawequal|rawget|rawset|rawlen|getmetatable|setmetatable|pcall|xpcall|require|unpack|collectgarbage|gcinfo|newproxy|getfenv|setfenv|tick|time|wait|delay|spawn|elapsedTime|version|loadstring)\\b"
        },
        {
          "name": "support.function.library.luau",
          "match": "\\b(math|string|table|coroutine|bit32|utf8|os|buffer|task|debug)\\b"
        }
      ]
    }
  }
}
